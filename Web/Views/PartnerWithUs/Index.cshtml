<div class="container partner-with-us">
    @if (Model.PagesWithSections != null)
    {
        foreach (var pageWithSections in Model.PagesWithSections)
        {
            int count = 0;
            foreach (var parentSections in pageWithSections.ParentSections)
            {
                if (count == 1)
                {
                    <div class="row centered section-padding">
                        <div class="col-lg-12 text-center">
                            <h1>Digital Healthcare Services</h1>
                            <p class="text-center">
                                Through a wide range of services such as Doctor Call, Video Call, Chat and Free Health Cashback, DH provides
                                comprehensive health solutions.
                            </p>
                        </div>
                    </div>
                    <div class="row padding-bottom d-none d-md-block">
                        <div class="lazy-load-gif">
                            <img class="img-fluid w-100" data-echo="/images/partners/Partner with us icons-01.svg" alt="">
                            <div class="loader"><div></div><div></div><div></div><div></div></div>
                        </div>
                    </div>
                    <div class="row padding-bottom d-block d-md-none">
                        <div class="lazy-load-gif">
                            <img class="img-fluid w-100" data-echo="/images/partners/Partner with us icons_Mobile.svg" alt="">
                            <div class="loader"><div></div><div></div><div></div><div></div></div>
                        </div>
                    </div>

                }
                if (parentSections.SectionTypeId == (int)SectionTypes.BannerContent)
                {
                    <div class="row centered header-content-without-card">
                        <div class="col-lg-12 text-center">
                            <div class="header-txt header-text-background">
                                <h1>@Html.DisplayFor(modelItem => parentSections.TitleLarge)</h1>
                                <div class="padding-for-mobile">
                                    @Html.Raw((@parentSections.Content))
                                </div>
                            </div>
                        </div>
                    </div>

                }
                else
                {
                    <div class="row">
                        <div class="col-lg-12 corporate text-center">
                            @if (parentSections.TitleLargeOnTop)
                            {
                                <h1>@Html.DisplayFor(modelItem => parentSections.TitleLarge)</h1>
                                <h4 style="color:#2F8F9C;">@Html.DisplayFor(modelItem => parentSections.TitleSmall)</h4>
                            }
                            else
                            {
                                <h4 style="color:#2F8F9C;">@Html.DisplayFor(modelItem => parentSections.TitleSmall)</h4>
                                <h1>@Html.DisplayFor(modelItem => parentSections.TitleLarge)</h1>
                            }
                            <div>
                                @Html.Raw((@parentSections.Content))
                            </div>
                        </div>
                    </div>
                }

                if (parentSections.SectionTypeId == (int)SectionTypes.CardWithBackground && count == 1)
                {
                    <div class="row padding-bottom">
                        @foreach (var sections in pageWithSections.Sections)
                        {
                            if (sections.ParentSectionId == parentSections.Id)
                            {
                                <div class="col-lg-3 pb-4">
                                    <div class="card box-shadow our-corporate">
                                        <img class="card-img-top" src="@Html.DisplayFor(modelItem =>sections.Image.ImageUrl)" alt="">
                                        <p>@Html.DisplayFor(modelItem => sections.Image.BottomText)</p>
                                        <div class="card-body">

                                            @if (sections.TitleLargeOnTop)
                                            {
                                                <h6 class="card-title pt-4">@Html.DisplayFor(modelItem => sections.TitleLarge)</h6>
                                                <div class="card-subtitle">@Html.DisplayFor(modelItem => sections.TitleSmall)</div>
                                            }
                                            else
                                            {
                                                <div class="card-subtitle card-content">@Html.DisplayFor(modelItem => sections.TitleSmall)</div>
                                                <h6 class="card-title">@Html.DisplayFor(modelItem => sections.TitleLarge)</h6>
                                            }
                                            <div>
                                                @Html.Raw((@sections.Content))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
                if (parentSections.SectionTypeId == (int)SectionTypes.CardWithBackground && count == 2)
                {
                    <div class="row testimonial">
                        @foreach (var sections in pageWithSections.Sections)
                        {
                            if (sections.ParentSectionId == parentSections.Id)
                            {
                                <div class="col-lg-4 padding-top">
                                    <div class="card box-shadow">

                                        <div class="card-body clients">
                                            <div class="our-clients">
                                                <img class="" src="@Html.DisplayFor(modelItem =>sections.Image.ImageUrl)" alt="">
                                                <p class="">@Html.DisplayFor(modelItem => sections.Image.BottomText)</p>
                                                <div>
                                                    @if (sections.TitleLargeOnTop)
                                                    {
                                                        <h4 class="card-title">@Html.DisplayFor(modelItem => sections.TitleLarge)</h4>
                                                        <div class="card-subtitle">@Html.Raw((@sections.TitleSmall))</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="card-subtitle">@Html.Raw((@sections.TitleSmall))</div>
                                                        <h4 class="card-title">@Html.DisplayFor(modelItem => sections.TitleLarge)</h4>
                                                    }
                                                </div>
                                            </div>
                                            <div>
                                                @Html.Raw((@sections.Content))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
                count++;
            }
        }
    }

